<h2>SPARQL</h2>

<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="query">Enter your SPARQL query in the text box below:</label>

                @Html.TextArea("query", "SELECT ?d WHERE {?d a <http://brightstardb.com/namespaces/default/Dinner>}", 10, 50, new {@class = "form-control"})
            </div>

            <button type="submit" class="btn btn-default">Query</button>
        }
    </div>
</div>
